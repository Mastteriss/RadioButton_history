<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Question_6">

    <RadioGroup
        android:id="@+id/radionGroupRB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="14dp"
        android:background="#abeceb">
        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Что такое 'Первая мировая война' для России?"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <RadioButton
            android:id="@+id/oneRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a) Война за независимость"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/twoRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="b) Война, в которой Россия воевала с Османской империей"

            />
        <RadioButton
            android:id="@+id/threeRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c) Война, в которой Россия участвовала в составе Антанты против центральных держав"

            />
        <RadioButton
            android:id="@+id/fourRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Война с Японией"

            />


    </RadioGroup>
    <Button
        android:id="@+id/buttonBTNTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Подтвердить"
        />
</LinearLayout>